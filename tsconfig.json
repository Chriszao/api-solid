{
	"compilerOptions": {
		"target": "ES2020",
		"module": "commonjs",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"outDir": "./dist",
		"allowJs": true,
		"rootDir": ".",
		"strictPropertyInitialization": false,
		"baseUrl": "./",
		"paths": {
			"@/*": [
				"./src/*"
			]
		}
	},
	"exclude": [
		"node_modules",
		"build"
	],
	"include": [
		"src"
	]
}
